{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },         
    { "handle": "filesystem" },                        
    { "src": "/(.*)", "dest": "/build/index.html" },   
    { "src": "/manifest.json", "dest": "/build/manifest.json" }
  ]
}